{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "declaration": true,
        "outDir": "./dist",
        "baseUrl": "./",
        "strict": true,
        "esModuleInterop": true,
        "pretty": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "sourceMap": true,
        "typeRoots": [
            "./node_modules/@types"
        ],
        "paths": {
            "@clients/*": ["src/clients/*"],
            "@middleware/*": ["src/middleware/*"]
        }
    },
    "include": [
        "./src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/__tests__/*"
    ],
    "ts-node": {
        "files": true,
        "require": [
            "tsconfig-paths/register"
        ]
    },
    "tsc-alias": {
        "verbose": false,
        "resolveFullPaths": true
    }
}
