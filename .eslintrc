{
    "parserOptions": {
        "ecmaVersion": 8,
        "sourceType": "module",
        "ecmaFeatures": {}
    },
    "extends": ["standard"],
    "parser": "@typescript-eslint/parser",
    "plugins": [
        "@typescript-eslint",
        "chai-friendly"
    ],
    "overrides": [
        {
            "files": ["config.ts"],
            "rules": {
                "no-process-env": "off"
            }
        }, {
            "files": ["*.test.ts", "*.spec.ts"],
            "rules": {
                "no-magic-numbers": "off",
                "@typescript-eslint/no-magic-numbers": "off",
                "no-process-env": "off",
                "no-unused-expressions": "off",
                "chai-friendly/no-unused-expressions": 2
            }
        }
    ],
    "rules": {
        "indent": ["error", 4],
        "padded-blocks": "off",
        "quotes": ["error", "double"],
        "semi": ["error", "always"],
        "space-before-function-paren": ["error", {
            "anonymous": "always",
            "named": "never"
          }
        ],
        "operator-linebreak": ["error", "after"],
        "no-unused-vars": "off",
        "no-undef": "off",
        "@typescript-eslint/no-unused-vars": "error",
        "no-extra-semi": 2,
        "no-magic-numbers": "off",
        "@typescript-eslint/no-magic-numbers": ["error", {
            "ignore": [0, 1],
            "ignoreArrayIndexes": true,
            "ignoreReadonlyClassProperties": true,
            "ignoreEnums": true
        }],
        "no-process-env": 2
    },
    "env": {
        "node": true,
        "commonjs": true,
        "mocha": true,
        "es6": true
    }
}
